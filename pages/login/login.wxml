
<!--pages/login/index.wxml-->
<view wx:if="{{!isLogin}}">
    <view class='header'>
        <image src='/icons/logo.png'></image>
    </view>
    <view class='content'>
        <view>申请获取以下权限</view>
        <text>获得你的公开信息(昵称，头像等)</text>
    </view>
    <button class='bottom' type='primary' open-type="getUserInfo" lang="zh_CN" bindtap="login">
        授权登录
    </button>
</view>
<!-- <button wx:if="{{!isLogin}}" bindtap="login">授权登录</button> -->
<view wx:else>
    <!--反馈建议-->
    <view class='my_item'>
        <button class="button" open-type="feedback">反馈建议</button>
        <view class='right_arrow' />
    </view>
    <!--在线客服-->
    <view class='my_item '>
        <button class="button" open-type="contact">在线客服</button>
        <view class='right_arrow' />
    </view>
    <button bindtap="loginOut">退出登录</button>
</view>
