.mine-provision {
  background-color: white;
  padding: 20rpx 40rpx;
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  align-items: center;
}

.button{
  margin: 0;
  padding: 0;
  background-color: transparent;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: start;
  align-items: center;
  color: #272626;
  font-size: 32rpx;
  font-weight: normal;
  flex-grow: 1;
}

.mine-provision image {
  width: 30rpx;
  height: 30rpx;
  flex-shrink: 0;
}