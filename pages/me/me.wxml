<!--pages/user/user.wxml-->
<view class="mine-wrapper">
  <view class="avatar-wrapper">
    <view>
      <view class="avatar">
        <image style="border-radius:50%;" src="/icons/头像1.jpeg"></image>
      </view>
      <view class="text">
        <text wx:if="{{userinfo.nickName}}">{{userinfo.nickName}}</text>
        <text wx:else bindtap="toLogin">注册 / 登录</text>
      </view>
    </view>
  </view>
</view>

<!--pages/mine/mine.wxml-->
<view class="container">
<view class="separate"></view>
<view class="order" catchtap="toOrder">
  <text class="myorder-text"></text>
  <text class="myorderlook-text">详细个人信息</text>
  <image class="next-image" src="/icons/右.png"></image>
</view>
<view class="line"></view>

<view class="navs">
    <view class="nav-item" catchtap="toOrder" data-type="{{item.name}}" data-typeid="{{item.typeId}}">
      <image src="/icons/消息中心.png" class="nav-image" />
      <text>消息中心</text>
    </view>
    <view class="nav-item" catchtap="toOrder" data-type="{{item.name}}" data-typeid="{{item.typeId}}">
      <image src="/icons/组队历史.png" class="nav-image" />
      <text>组队历史</text>
    </view>
    <view class="nav-item" catchtap="toOrder" data-type="{{item.name}}" data-typeid="{{item.typeId}}">
      <image src="/icons/系统设置.png" class="nav-image" />
      <text>系统设置</text>
    </view>
</view>

<view class="line"></view>

<view class="person-list">
  <view class="list-item">
    <image class="item-image" src="/icons/关于我们.png"></image>
    <text class="item-text">关于我们</text>
  </view>
  <!-- <view class="person-line"></view> -->
  <view class="list-item">
    <image class="item-image" src="/icons/反馈意见.png"></image>
    <text class="item-text">反馈意见</text>
  </view>
</view>
<view class="separate"></view>
</view>

  